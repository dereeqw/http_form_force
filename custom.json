  "_tuning_guide": {
    "_comment": "Guía de ajuste fino para casos específicos",
    
    "if_too_many_false_positives": {
      "action": "Incrementar min_success_score",
      "example": {
        "score_thresholds": {
          "min_success_score": 8,
          "success_keywords": 8,
          "cookies_change": 6
        }
      }
    },
    
    "if_too_many_false_negatives": {
      "action": "Bajar min_success_score y aumentar pesos",
      "example": {
        "score_thresholds": {
          "min_success_score": 3,
          "status_change": 4,
          "cookies_change": 6
        }
      }
    },
    
    "if_getting_blocked_quickly": {
      "action": "Aumentar delays y reducir workers",
      "example": {
        "delay_between_attempts": 3.0,
        "delay_randomization": 0.5,
        "max_workers": 3,
        "consecutive_errors_threshold": 3
      }
    },
    
    "if_target_has_waf": {
      "action": "Activar máxima evasión",
      "example": {
        "rotate_user_agents": true,
        "use_realistic_headers": true,
        "randomize_delays": true,
        "delay_between_attempts": 2.0,
        "delay_randomization": 0.5,
        "max_workers": 5
      }
    }
